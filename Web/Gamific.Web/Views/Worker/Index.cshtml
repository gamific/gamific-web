
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $("#Funcionarios").addClass("active");
</script>

<input type="hidden" id="NumberOfWorkers" value="@ViewBag.NumberOfWorkers"/>

<div>
    <div class="pageheader">
        <h2><i class="fa fa-users"></i> Funcionários</h2>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-md-12">
                <div class="tile transparent">
                    <div class="tile-body color transparent-black rounded-corners">
                        <div id="gerenciarperfis" class="table-toolbar-left">
                            <a id="demo-dt-addrow-btn" class="btn btn-default sing-up-button" href="/admin/funcionarios/cadastrar" title="Cadastrar Perfil" onclick="showEntityModal(this); return false;"><i class="fa fa-user-plus"></i> Cadastrar Funcionário</a>
                            <a id="demo-dt-addrow-btn" class="btn btn-default sing-up-button" href="/admin/funcionarios/cadastrarFuncionariosArquivo" title="Adicionar Funcionários Arquivo" onclick="showEntityModal(this); return false;"><i class="fa fa-upload"></i> Importar Arquivo</a>
                        </div>
                        <div class="">
                            <table id="funcionariosDataTable" class="table table-striped" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>E-mail</th>
                                        <th>Função</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tile-footer border-top color white rounded-bottom-corners nopadding">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="entity-edit-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" />

<script src="/Content/Js/app/worker.js" charset="iso-8859-1"></script>