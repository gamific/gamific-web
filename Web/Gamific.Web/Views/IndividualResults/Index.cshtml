@using Vlast.Gamific.Model.Public.DTO
@using Vlast.Gamific.Model.Firm.Domain
@model  Vlast.Gamific.Web.Controllers.Public.Model.FilterResultDTO

<!DOCTYPE html>
<html lang="pt-br">

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $("#IndividualResults").addClass("active");
</script>

<div class="pageheader">
    <div class="row">
        <div class="col-xs-6">
            <h2><i class="fa fa-line-chart"></i> Resultados Individuais</h2>
        </div>
        <div class="col-xs-6">
            <div class="text-right tile-header" id="buttonFilters">
                <a id="FilterButton" class="" onclick="hideFilters()"><i class="fa fa-filter fa-2x" aria-hidden="true" style="margin-top:20px;"></i></a>
            </div>
        </div>
    </div>
</div>

<body class="bg-1">
    <input hidden type="text" value="@ViewBag.State" id="state" />
    <input hidden type="text" value="@ViewBag.EpisodeId" id="EpisodeId" />
    <input hidden type="text" value="@ViewBag.TeamId" id="TeamId" />
    <input hidden type="text" value="@ViewBag.PlayerId" id="PlayerId" />

    <div id="wrap">
        <div class="">
            <!-- Conteúdo -->
            <div class="main">
                <div class="row">
                    <div class="col-lg-12 col-md-12">

                        <section class="tile transparent" id="Filters">
                            <div class="tile-header color transparent-black textured rounded-corners ">
                                <div class="hidden-xs">
                                    Filtros
                                    <br />
                                    <br />

                                </div>

                                <div class="row">
                                    <div class="form-group">
                                        <div class="col-xs-12 col-sm-6 col-md-3">
                                            <div class="hidden-xs">
                                                <div class="col-xs-12">
                                                    Estado
                                                </div>
                                                <div class="col-xs-12">
                                                    <select class="chosen-select chosen-transparent form-control" id="dropDownState">
                                                        <option value="1">Ativo</option>
                                                        <option value="0">Inativo</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-xs-12 col-sm-6 col-md-3">
                                            <div class="">
                                                <div class="col-xs-12">
                                                    Campanha
                                                </div>
                                                <div class="col-xs-12">
                                                    <select class="chosen-select chosen-transparent form-control" id="dropDownEpisodes"></select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-xs-12 col-sm-6 col-md-3">
                                            <div class="">
                                                <div class="col-xs-12">
                                                    Equipe
                                                </div>
                                                <div class="col-xs-12">
                                                    <select class="chosen-select chosen-transparent form-control" id="dropDownTeams"></select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="col-xs-12 col-sm-6 col-md-3">
                                            <div>
                                                <div class="col-xs-12">
                                                    Metrica
                                                </div>
                                                <div class="col-xs-12">
                                                    <select class="chosen-select chosen-transparent form-control" id="dropDownMetrics">
                                                        <option value="empty">Todas</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </section>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <!-- cards -->

                    <div class="row cards">
                        <div class="">
                            <div id="stats" class="carousel dashboardstats col-xs-12" data-ride="carousel">
                                <div class="">
                                    <!-- Wrapper for slides -->
                                    <div class="carousel-inner" id="div-cards">

                                    </div>
                                </div>
                                <!-- Controls -->
                                <a class="left carousel-control" href="#stats" data-slide="prev">
                                    <i class="fa fa-chevron-left fa-lg left-side"></i>
                                </a>
                                <a class="right carousel-control" href="#stats" data-slide="next" style="padding-right:25px;">
                                    <i class="fa fa-chevron-right fa-lg right-side"></i>
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- /cards -->
                </div>
            </div>

        </div>

        <div class="row">
            <div class="tile-header transparent col-md-12" style="border-bottom: 1px solid rgba(255, 255, 255, 0.3); ">
                <h1 style="color:#ffffff; font-size: 24px;">Ranking Jogador</h1>
            </div>
            <div style="padding-top:80px;">
                <div class="col-md-6">
                    <div class="tile transparent">
                        <div class="tile-body color transparent-black rounded-corners">
                            <div class="podiumContainerPlayers" id="podiumContainerPlayers" style="min-width: 100%; height: 100%; min-height:445px; margin: 0 auto"></div>
                        </div>
                        <div class="tile-footer border-top color white rounded-bottom-corners nopadding">
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="tile transparent">
                        <div class="tile-body color transparent-black rounded-corners">
                            <div class="">
                                <table id="rankingDataTablePlayers" class="table table-striped" cellspacing="0" width="100%">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Nome</th>
                                            <th>Equipe</th>
                                            <th>Score</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                        <div class="tile-footer border-top color white rounded-bottom-corners nopadding">
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <script type="text/javascript">

        $(document).ready(function () {
            dashBoardLoad($('#state').val(), $('#EpisodeId').val(), $('#TeamId').val(), $('#PlayerId').val());
            $(window).resize(function () {
                if ($('header').width() <= 768) {
                    showFilters()
                }
            });
        });

        function hideFilters() {
            if ($('#Filters').is(":visible")) {
                $('#Filters').hide();
            }
            else{
                $('#Filters').show();
            }
        }

        function showFilters() {
            if ($('#Filters').is(":hidden")) {
                $('#Filters').show();
            }
        }
    </script>
</body>
</html>

<script src="~/Content/Js/app/individualResults.js" charset="iso-8859-1"></script>
<script src="http://code.highcharts.com/highcharts.js"></script>