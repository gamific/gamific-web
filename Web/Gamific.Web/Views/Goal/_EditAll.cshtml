<form action="salvarArquivoMeta" id="ArchiveForm">
    <div id="modal-panel">
        <div class="modal-dialog modal-xlg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="cadastrarResultadoLabel"><br class="Apple-interchange-newline">Lançar meta</h4>
                </div>
                <div class="modal-body" id="edit-modal-body">
                    <!--<input type="hidden" name="clean" id="clean" value="@ViewBag.Clean" />-->
                    <input type="hidden" name="episode" id="episode" value="@ViewBag.Episodes" />
                    <input type="hidden" name="episodeId" id="episodeId" value="@ViewBag.EpisodeId" />

                    @Html.AntiForgeryToken()
                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @id = "validation-data", @class = "text-danger-summary" })
                    </div>
                    <!--
                    <div class="form-group">
                        <div class="col-xs-12" style="font-size:larger;">
                            Campanha
                        </div>
                        <div class="col-xs-12">
                            <select class="chosen-select form-control" id="dropDownEpisodesModal" value="" onchange=""></select>
                        </div>
                    </div>-->

                    <div class="col-xs-12" style="top:7px;">
                        @Html.Label("Selecione uma Campanha*")
                        <div class="form-group">
                            <select class="form-control" name="episodeId">
                                @foreach (SelectListItem Episode in ViewBag.Episodes)
                                {
                                    if (Episode.Value == ViewBag.EpisodeId && ViewBag.EpisodeId != null)
                                    {
                                        <option value="@Episode.Value" selected="selected">@Episode.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@Episode.Value">@Episode.Text</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group" id="sendArchive" style="">
                        <div class="col-xs-12 modal-div">
                            <a id="downloadArchive" class="btn btn-default sing-up-button" href="/admin/metas/baixarPlanilhaMeta/@ViewBag.EpisodeId" onclick="" title="Baixar planilha de metas"><i class="fa fa-download"></i> Baixar Modelo</a>
                        </div>
                    </div>



                    <div class="form-group" id="sendArchive" style="">
                        <div class="col-xs-12 modal-div">
                            <input class="btn btn-default sing-up-button" type="file" id="goalArchive" name="goalArchive" />
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" onclick="SubmitArchive()" data-dismiss="modal" class="btn btn-primary">Adicionar</button>
                </div>
            </div>
        </div>
    </div>
</form>
