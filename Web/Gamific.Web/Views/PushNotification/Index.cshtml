@model  Vlast.Gamific.Web.Controllers.Management.Model.EmailSupportDTO

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $("#Notificacoes").addClass("active");
</script>
<div>
    <input type="hidden" value="@ViewBag.Profile" id="userProfile" />
    <div class="pageheader">

        <div class="row">
            <div class="col-xs-6">
                <h2><i class="fa fa-paper-plane"></i> Enviar Notificações</h2>
            </div>
        </div>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <section class="tile transparent" id="Filters">
                    <div class="tile-header color transparent-black textured rounded-corners">

                        <div class="row">
                            <div class="form-group">
                                <div class="col-xs-12 col-sm-6 col-md-4">
                                    <div>
                                        <div class="col-xs-12">
                                            Campanha
                                        </div>
                                        <div class="col-xs-12">
                                            <select class="chosen-select chosen-transparent form-control" id="dropDownEpisodes"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6 col-md-4">
                                    <div>
                                        <div class="col-xs-12">
                                            Equipe
                                        </div>
                                        <div class="col-xs-12">
                                            <select class="chosen-select chosen-transparent form-control" id="dropDownTeams"></select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-6 col-md-3">
                                    <div class="">
                                        <div class="col-xs-12">
                                            Funcionario
                                        </div>
                                        <div class="col-xs-12">
                                            <select class="chosen-select chosen-transparent form-control" id="dropDownWorkers"></select>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>




        <div class="row">

                <div class="col-md-6">
                    <section class="tile color transparent-black">
                        <div class="tile-body">
                            <form action="/admin/suporte/enviar" class="form-horizontal" role="form" enctype="multipart/form-data" method="post">
                                <br />
                                <br />
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Msg, "Mensagem*:", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextAreaFor(model => model.Msg, new { @class = "form-control", @tabindex = "1" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-offset-6 col-sm-6 text-right">
                                        <button type="submit" class="btn btn-primary">Enviar</button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </section>
                </div>
        

            <div class="col-md-6">
                <div class="tile transparent">
                    <div class="tile-body color transparent-black rounded-corners">
                        <div class="">
                            <table id="rankingDataTable" class="table table-striped" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Nome</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tile-footer border-top color white rounded-bottom-corners nopadding">
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="~/Content/Js/app/pushNotification.js" charset="iso-8859-1"></script>
