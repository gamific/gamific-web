
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $("#Equipes").addClass("active");
</script>

<div>
    <input id="CurrentTeam" name="CurrentTeam" type="hidden" value="@ViewBag.CurrentTeam" />
    <div class="pageheader">
        <h2><i class="fa fa-flag"></i> @ViewBag.TeamName</h2>
        <br />
        <small>
            <a href="/admin/equipes">
                <i class="fa fa-arrow-left"></i> Voltar
            </a>
        </small>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-md-12">
                <div class="tile transparent">
                    <div class="tile-body color transparent-black rounded-corners">
                        <div id="gerenciarEquipes" class="table-toolbar-left">

                            <a id="demo-dt-addrow-btn" class="btn btn-default sing-up-button" href="/admin/equipes/associarJogadores/@ViewBag.CurrentTeam" title="Adicionar Membros da Equipe" onclick="showEntityModal(this); return false;"><i class="fa fa-user-plus"></i> Adicionar Membros da Equipe</a>

                        </div>
                        <div class="">
                            <table id="playersDataTable" class="table table-striped" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Email</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="tile-footer border-top color white rounded-bottom-corners nopadding">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="entity-edit-modal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" />

<script src="/Content/Js/app/team.js" charset="iso-8859-1"></script>