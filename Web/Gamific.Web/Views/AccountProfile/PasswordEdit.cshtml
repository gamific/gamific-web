
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model  Vlast.Gamific.Model.Account.DTO.PasswordDTO

@using GridMvc.Html

<div>
    <div class="pageheader">
        <h2><i class="fa fa-building"></i> Alterar Senha</h2>
    </div>
    <div class="main">
        <div class="row">
            <div class="col-md-12">
                <section class="tile color transparent-black">
                    <div class="tile-body">
                        <form action="/admin/usuario/perfil/salvarSenha" method="post" enctype="multipart/form-data" class="form-horizontal" role="form">
                            <span style="display:none">
                                @Html.HiddenFor(model => model.UserId);
                            </span>
                            <div class="form-group">
                                @Html.LabelFor(model => model.CurrentPassword, "Senha Atual*:", new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-4">
                                    @Html.PasswordFor(model => model.CurrentPassword, new { @class = "form-control", @tabindex = "3" })
                                    @Html.ValidationMessageFor(model => model.CurrentPassword, "O campo Senha Atual é obrigatório.", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.NewPassword, "Nova Senha*:", new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-4">
                                    @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", @tabindex = "4" })
                                    @Html.ValidationMessageFor(model => model.NewPassword, "O campo Nova Senha é obrigatório.", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.NewPasswordConfirmation, "Confirmar Senha*:", new { @class = "col-sm-4 control-label" })
                                <div class="col-sm-4">
                                    @Html.PasswordFor(model => model.NewPasswordConfirmation, new { @class = "form-control", @tabindex = "5" })
                                    @Html.ValidationMessageFor(model => model.NewPasswordConfirmation, "O campo Confirmar Senha é obrigatório.", new { @class = "text-danger" })
                                </div>
                            </div>

                            <br />

                            <br /><br />

                            <div class="form-group form-footer">
                                <div class="col-sm-offset-4 col-sm-8">
                                    <button class="btn btn-primary" type="submit">Salvar</button>
                                </div>
                            </div>

                        </form>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>