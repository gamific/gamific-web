<form action="salvarResultadoArquivo" id="ArchiveForm">
    <div id="modal-panel">
        <div class="modal-dialog modal-xlg">
            <div class="modal-content">
                <div class="modal-header">
                    <!--<h4 class="modal-title" id="cadastrarResultadoLabel"><br class="Apple-interchange-newline">Lançar resultado</h4>-->
                    <div class="form-group " id="sendArchive" >
                        <input type="hidden" name="episode" id="episode" value="@ViewBag.EpisodeId" />
                        <div class="col-sm-8 col-md-8">
                            <h4 class="modal-title" id="cadastrarResultadoLabel" style="font-size:25px; "><br class="Apple-interchange-newline">Lançar resultado</h4>
                        </div>
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            <a id="downloadArchive" class="btn btn-default sing-up-button" href="/admin/lancarResultados/baixarPlanilha/@ViewBag.EpisodeId" onclick="" title="Baixar planilha de resultados"><i class="fa fa-download"></i> Baixar Modelo</a>
                        </div>
                    </div>
                </div>

                <div class="modal-body" id="edit-modal-body" >
                    <!--<input type="hidden" name="clean" id="clean" value="ViewBag.Clean" />-->
                    <input type="hidden" name="episode" id="episode" value="@ViewBag.Episodes" />
                    @Html.AntiForgeryToken()
                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @id = "validation-data", @class = "text-danger-summary" })
                    </div>
                    
                    
                    <div class="col-xs-12" style="top:20px;">
                        @Html.Label("Selecione uma Campanha*")
                        <div class="form-group">
                            <select class="form-control" name="episodeId">
                                @foreach (SelectListItem Episode in ViewBag.Episodes)
                                {
                                        <option value="@Episode.Value" selected="selected">@Episode.Text</option>
                                }
                            </select>
                        </div>
                    </div>

                    
                    <div class="form-group" id="sendArchive" >
                        <div class="col-xs-12 modal-div" style="top:12px;">
                            <input class="btn btn-default sing-up-button" type="file" id="resultsArchive" name="resultsArchive" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10 col-md-12 modal-div" style="font-size:larger;">
                            Limpar lançamentos anteriores:
                                <input type="checkbox" id="clean" name="clean" value="@ViewBag.Clean">
                             
                        </div>
                    </div>
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="button" onclick="SubmitArchive()" data-dismiss="modal" class="btn btn-primary">Adicionar</button>
                </div>
            </div>
        </div>
    </div>
</form>

