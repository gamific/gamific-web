    <input hidden type="text" value="@ViewBag.Grafic_stogram" id="Grafic_stogram" />
    <input hidden type="text" value="@ViewBag.Grafic_evolution" id="Grafic_evolution" />

    <div id="wrap">
        <div class="row">
            <!-- Conteúdo -->
            <div class="main">
