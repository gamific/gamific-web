<script src="~/Content/Js/app/dashboardHistorico.js" charset="iso-8859-1"></script>
<script type="text/javascript">

    $(document).ready(function () {

            dashBoardLoad($('#state').val(), $('#EpisodeId').val(), $('#TeamId').val(), $('#PlayerId').val());
            $(window).resize(function () {
                if ($('header').width() <= 768) {
                    showFilters()
                }
            });

            hideGraficProducts();
            hideGraficStogram();
            hideGraficEvolution();

        });

        function hideFilters() {
            if ($('#Filters').is(":visible")) {
                $('#Filters').hide();
            }
            else {
                $('#Filters').show();
            }
        }

        function showFilters() {
            if ($('#Filters').is(":hidden")) {
                $('#Filters').show();
            }
        }

        function hideGraficProducts() {
            if (!$('#Grafic_itens').val()) {
                $('#grafic_products').hide();
            }
        }

        function hideGraficStogram() {
            if (!$('#Grafic_stogram').val()) {
                $('#grafic_histogramo').hide();
            }
        }

        function hideGraficEvolution() {
            if (!$('#Grafic_evolution').val()) {
                $('#grafic_evolucao').hide();
            }
        }

</script>



