                                        {
                                            <div class="col-xs-12 col-sm-6 col-md-4">
                                                <div class="">
                                                    <div class="col-xs-12">
                                                        Campanha
                                                    </div>
                                                    <div class="col-xs-12">
                                                        <select class="chosen-select chosen-transparent form-control" id="dropDownEpisodes"></select>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-xs-12 col-sm-6 col-md-4">
                                                <div class="">
                                                    <div class="col-xs-12">
                                                        Equipe
                                                    </div>
                                                    <div class="col-xs-12">
                                                        <select class="chosen-select chosen-transparent form-control" id="dropDownTeams"></select>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-xs-12 col-sm-6 col-md-4">
                                                <div class="">
                                                    <div class="col-xs-12">
                                                        Funcionario
                                                    </div>
                                                    <div class="col-xs-12">
                                                        <select class="chosen-select chosen-transparent form-control" id="dropDownWorkers"></select>
                                                    </div>
                                                </div>
                                            </div>
                                        }


                                    </div>
                                </div>

                            </div>

                        </section>
                    </div>
