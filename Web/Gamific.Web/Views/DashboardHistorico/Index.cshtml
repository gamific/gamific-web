                                    <div class="carousel-inner" id="div-cards">

                                    </div>
                                </div>
                                <!-- Controls -->
                                <a class="left carousel-control" href="#stats" data-slide="prev">
                                    <i class="fa fa-chevron-left fa-lg left-side"></i>
                                </a>
                                <a class="right carousel-control" href="#stats" data-slide="next" style="padding-right:25px;">
                                    <i class="fa fa-chevron-right fa-lg right-side"></i>
