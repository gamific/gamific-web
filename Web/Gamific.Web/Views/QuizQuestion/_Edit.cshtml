@model  Vlast.Gamific.Web.Services.Engine.DTO.QuizQuestionEngineDTO

@using (Ajax.BeginForm("Save", "QuizQuestion", new AjaxOptions { OnSuccess = "onSuccessSaveQuestion", OnFailure = "onFailureSaveQuestion", UpdateTargetId = "modal-panel" }))
{
    <div id="modal-panel">
        <div class="modal-dialog modal-xlg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" title="Fechar" id="btn_close_modal" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="criarPerguntaLabel">Criar Pergunta</h4>
                </div>
                <div class="modal-body" id="edit-modal-body">
                    @Html.AntiForgeryToken()

                    <span style="display:none">
                        @Html.HiddenFor(model => model.QuizSheetId);
                    </span>

                    <div class="row">
                        @Html.ValidationSummary(true, "", new { @id = "validation-data", @class = "text-danger-summary" })
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10 col-md-6 modal-div">
                            @Html.LabelFor(model => model.Enunciation, "Titulo*:", new { @class = "col-sm-2 control-label" })
                            @Html.EditorFor(model => model.Enunciation, new { htmlAttributes = new { @class = "form-control", @tabindex = "1" } })
                            @Html.ValidationMessageFor(model => model.Enunciation, "O campo Titulo é obrigatório.", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm-10 col-md-6 modal-div">
                            @Html.LabelFor(model => model.OptionsString, "Respostas(separadas por ;)*:", new { @class = "col-sm-2 control-label" })
                            @Html.EditorFor(model => model.OptionsString, new { htmlAttributes = new { @class = "form-control", @tabindex = "2" } })
                            @Html.ValidationMessageFor(model => model.OptionsString, "O campo Respostas é obrigatório.", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm-10 col-md-6 modal-div">
                            @Html.LabelFor(model => model.CorrectOptionIndex, "Indice da Resposta Correta*:", new { @class = "col-sm-2 control-label" })
                            @Html.EditorFor(model => model.CorrectOptionIndex, new { htmlAttributes = new { @class = "form-control", @tabindex = "3" } })
                            @Html.ValidationMessageFor(model => model.CorrectOptionIndex, "O campo Indice da Resposta Correta é obrigatório.", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm-10 col-md-6 modal-div">
                            @Html.LabelFor(model => model.Points, "Valor em pontos*:", new { @class = "col-sm-2 control-label" })
                            @Html.EditorFor(model => model.Points, new { htmlAttributes = new { @class = "form-control", @tabindex = "4" } })
                            @Html.ValidationMessageFor(model => model.Points, "O campo Valor em pontos é obrigatório.", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
            </div>
        </div>
    </div>
}

<script>
    window.addEventListener("submit", function (e) {
        var form = e.target;
        if (form.getAttribute("enctype") === "multipart/form-data") {
            if (form.dataset.ajax) {
                e.preventDefault();
                e.stopImmediatePropagation();
                var xhr = new XMLHttpRequest();
                xhr.open(form.method, form.action, false);
                xhr.onreadystatechange = function () {
                    if (xhr.readyState == 4 && xhr.status == 200) {
                        if (form.dataset.ajaxUpdate) {
                            var updateTarget = document.querySelector(form.dataset.ajaxUpdate);
                            if (updateTarget) {
                                updateTarget.innerHTML = xhr.responseText;
                            }
                        }
                    }
                };
                xhr.send(new FormData(form));
            }
            onSuccessSaveQuestion();
        }
    }, true);
</script>