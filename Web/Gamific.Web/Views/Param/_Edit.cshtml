
@model  Vlast.Gamific.Model.Firm.Domain.ParamEntity

@using (Ajax.BeginForm("Save", "Param", new AjaxOptions { OnSuccess = "onSucessSaveParam", OnFailure = "onFailureSaveParam", UpdateTargetId = "modal-painel" }))
{

    <span style="display:none">
        @Html.HiddenFor(model => model.Id);
    </span>

    <div id="modal-panel">
        <div class="modal-dialog modal-xlg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" title="Fechar" id="btn_close_modal" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="criaNovaEpisode">Criar nova Campanha</h4>
                </div>
                <div class="modal-body" id="edit-modal-body">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        @Html.ValidationSummary(true)
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10 col-md-12 modal-div">
                            @Html.LabelFor(model => model.Name, "Nome do Parametro*:", new { @class = "col-sm-12 control-label" })
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @tabindex = "1" } })
                            @Html.ValidationMessageFor(model => model.Name, "O campo Nome do Parametro é obrigatório.", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10 col-md-6 modal-div">
                            @Html.LabelFor(model => model.Value, "Valor:", new {  @class = "col-sm-12 control-label" })
                            @Html.EditorFor(model => model.Value, new { htmlAttributes = new {  @class = "form-control",  @tabindex = "2" } })
                            @Html.ValidationMessageFor(model => model.Value, "O campo  Valor é obrigatório.", new {  @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10 col-md-12 modal-div">
                            @Html.LabelFor(model => model.Description, "Descrição*:", new { @class = "col-sm-12 control-label" })
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @tabindex = "3" } })
                            @Html.ValidationMessageFor(model => model.Description, "O campo Descrição é obrigatório.", new { @class = "text-danger"})
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Cadastrar</button>
                </div>
            </div>
        </div>
    </div>
}


